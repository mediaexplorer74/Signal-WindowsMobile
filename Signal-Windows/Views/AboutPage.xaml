<Page
    x:Class="Signal_Windows.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Signal_Windows.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="About" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource TitleTextBlockStyle}"/>
        <StackPanel Grid.Row="1" Margin="32,0,0,0">
            <TextBlock Text="Signal for Windows" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:Name="VersionTextBlock" Text="THE BEST VERSION" Style="{StaticResource BodyTextBlockStyle}"/>
            <HyperlinkButton Content="Privacy policy" NavigateUri="https://golf1052.com/signal.html" FontSize="20"/>
            <HyperlinkButton Content="Report an issue on GitHub" NavigateUri="https://github.com/signal-csharp/Signal-Windows/issues" FontSize="20"/>
            <HyperlinkButton Content="Contribute code!" NavigateUri="https://github.com/signal-csharp/Signal-Windows" FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
